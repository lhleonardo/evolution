{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ]
    },
    "resolveJsonModule": true
  }
}